<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NixvaleNew.Maui"
             xmlns:converters="clr-namespace:NixvaleNew.Maui.Converters"
             xmlns:debug="clr-namespace:Nixvale.Core.Debug;assembly=Nixvale.Core"
             x:Class="NixvaleNew.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolToStartStopConverter x:Key="BoolToStartStopConverter" />
            <converters:BoolToStartStopCommandConverter x:Key="BoolToStartStopCommandConverter" />
            <converters:LogLevelToColorConverter x:Key="LogLevelToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
